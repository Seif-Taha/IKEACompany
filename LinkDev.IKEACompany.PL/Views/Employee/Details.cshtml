@model EmployeeDetailsToReturnDto
@{
    ViewData["Title"] = "Details";
}

<h1>Employees Details</h1>


<!--Bootstrap Tabs-->
<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link " id="adminstration-tab" data-bs-toggle="tab" href="#adminstration" role="tab" aria-controls="adminstration" aria-selected="false">Adminstration</a>
    </li>
</ul>

<div class="tab-content" id="myTapContent">
    <!--General Tab Content-->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div> 
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div> 
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div> 
            <div class="form-group col-6 ">
                <label class="control-label" asp-for="Gender"></label><br />
                @foreach (Gender genderOptions in Enum.GetValues(typeof(Gender)))
                {
                    <label class="radio-inline">
                        <input type="radio" disabled asp-for="Gender" value="@genderOptions" />
                        @genderOptions
                    </label>
                }
            </div>
            <div class="form-group col-6 mb-3">
                <label class="control-label mb-2" asp-for="EmployeeType"></label><br />
                <select disabled asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option value="">Select Employee Type</option>
                </select>
            </div>
            <div class="form-group col-12">
                <label class="col-form-label form-check-label" asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control form-check-input" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly />
            </div>
        </div>
    </div>

    <!--Adminstration Tab Content-->
    <div class="tab-pane fade p-4 border" id="adminstration" role="tabpanel" aria-labelledby="adminstration-tab">
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>

    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>

</div>