 @model DepartmentEditViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1 class="col-8 my-3">Edit Department</h1>
<form asp-action="Edit" class="col-8">
    <div asp-validation-summary="ModelOnly"></div>

    <div class ="form-group mb-3" >
        <label class="form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class ="form-group mb-3" >
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class ="form-group mb-3" >
        <label class="form-label" asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class ="form-group mb-3" >
        <label class="form-label" asp-for="CreationDate"></label>
        <input type="date" class="form-control" asp-for="CreationDate" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-primary">
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</form>
